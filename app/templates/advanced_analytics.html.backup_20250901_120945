<!-- Advanced Analytics Scripts -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Advanced Analytics JavaScript loaded');
    
    // Get CSRF token from meta tag with error handling
    const csrfMeta = document.querySelector('meta[name="csrf-token"]');
    if (!csrfMeta) {
        console.error('CSRF token meta tag not found');
        return;
    }
    const csrfToken = csrfMeta.getAttribute('content');
    console.log('CSRF token found:', csrfToken ? 'Yes' : 'No');

    // ML Prediction Form Handler (AJAX)
    document.getElementById('ml-prediction-form').addEventListener('submit', function(e) {
        e.preventDefault();
        const symbol = document.getElementById('prediction-symbol').value.toUpperCase();
        const days = parseInt(document.getElementById('prediction-days').value);
        
        // Show loading state
        const results = document.getElementById('ml-prediction-results');
        results.innerHTML = '<div class="alert alert-info"><i class="fas fa-spinner fa-spin"></i> Genererer prediksjon...</div>';
        
        fetch('/advanced-analytics/generate-prediction', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json',
                'X-CSRFToken': csrfToken
            },
            credentials: 'same-origin',
            body: JSON.stringify({ ticker: symbol, days: days })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                results.innerHTML = `<div class='alert alert-success'><strong>✅ Prediksjon for ${symbol}:</strong><br>${data.prediction}</div>`;
            } else {
                results.innerHTML = `<div class='alert alert-danger'><strong>❌ Feil:</strong> ${data.error || 'Kunne ikke generere prediksjon.'}</div>`;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            results.innerHTML = `<div class='alert alert-danger'><strong>❌ Nettverksfeil:</strong> ${error.message}</div>`;
        });
    });

    // Batch Prediction Button (AJAX)
    document.getElementById('batch-predict-btn').addEventListener('click', function() {
        const symbolsText = document.getElementById('batch-symbols').value;
        const symbols = symbolsText.split(',').map(s => s.trim().toUpperCase()).filter(s => s);
        
        if (symbols.length === 0) {
            alert('Vennligst skriv inn minst ett aksjesymbol');
            return;
        }
        
        const days = parseInt(document.getElementById('prediction-days').value);
        const results = document.getElementById('ml-prediction-results');
        results.innerHTML = '<div class="alert alert-info"><i class="fas fa-spinner fa-spin"></i> Genererer batch prediksjoner...</div>';
        
        fetch('/advanced-analytics/batch-predictions', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json',
                'X-CSRFToken': csrfToken
            },
            credentials: 'same-origin',
            body: JSON.stringify({ tickers: symbols, days: days })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success && data.predictions) {
                let html = '<div class="alert alert-success"><strong>✅ Batch Prediksjoner:</strong><ul class="mb-0 mt-2">';
                for (const [sym, pred] of Object.entries(data.predictions)) {
                    const sign = pred > 0 ? '+' : '';
                    const color = pred > 0 ? 'text-success' : 'text-danger';
                    html += `<li><strong>${sym}:</strong> <span class="${color}">${sign}${pred}%</span></li>`;
                }
                html += '</ul></div>';
                results.innerHTML = html;
            } else {
                results.innerHTML = `<div class='alert alert-danger'><strong>❌ Feil:</strong> ${data.error || 'Ingen data.'}</div>`;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            results.innerHTML = `<div class='alert alert-danger'><strong>❌ Nettverksfeil:</strong> ${error.message}</div>`;
        });
    });

    // Market Analysis Button (AJAX)
    const marketAnalysisBtn = document.getElementById('market-analysis-btn');
    if (marketAnalysisBtn) {
        console.log('Market Analysis button found, adding event listener');
        marketAnalysisBtn.addEventListener('click', function() {
            console.log('Market Analysis button clicked');
            const results = document.getElementById('ml-prediction-results');
            results.innerHTML = '<div class="alert alert-info"><i class="fas fa-spinner fa-spin"></i> Genererer markedsanalyse...</div>';
            
            fetch('/advanced-analytics/market-analysis', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/json',
                    'X-CSRFToken': csrfToken
                },
                credentials: 'same-origin'
            })
        .then(res => res.json())
        .then(data => {
            if (data.success && data.analysis) {
                results.innerHTML = `<div class='alert alert-success'><strong>✅ Markedsanalyse:</strong><br>${data.analysis}</div>`;
            } else {
                results.innerHTML = `<div class='alert alert-danger'><strong>❌ Feil:</strong> ${data.error || 'Kunne ikke generere markedsanalyse.'}</div>`;
            }
            })
            .catch(error => {
                console.error('Error:', error);
                results.innerHTML = `<div class='alert alert-danger'><strong>❌ Nettverksfeil:</strong> ${error.message}</div>`;
            });
        });
    } else {
        console.log('Market Analysis button not found');
    }

    // Simple placeholder handlers for other buttons
    document.getElementById('efficient-frontier-btn').addEventListener('click', function() {
        const results = document.getElementById('portfolio-optimization-results');
        results.innerHTML = '<div class="alert alert-success"><strong>✅ Efficient Frontier:</strong><br>Optimal allokering beregnet! (Prototype funksjon)</div>';
    });

    document.getElementById('var-analysis-btn').addEventListener('click', function() {
        const results = document.getElementById('risk-analysis-results');
        results.innerHTML = '<div class="alert alert-warning"><strong>⚠️ VaR Analysis:</strong><br>Value at Risk beregnet til 5.2% (Prototype funksjon)</div>';
    });

    document.getElementById('stress-test-btn').addEventListener('click', function() {
        const results = document.getElementById('risk-analysis-results');
        results.innerHTML = '<div class="alert alert-danger"><strong>🚨 Stress Test:</strong><br>Portefølje tåler stress scenario (Prototype funksjon)</div>';
    });

    document.getElementById('monte-carlo-btn').addEventListener('click', function() {
        const results = document.getElementById('risk-analysis-results');
        results.innerHTML = '<div class="alert alert-info"><strong>📊 Monte Carlo:</strong><br>Simulering fullført med 95% konfidensgrad (Prototype funksjon)</div>';
    });
});
</script>
{% endblock %}
